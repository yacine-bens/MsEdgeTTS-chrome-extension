{
  "manifest_version": 3,
  "name": "MS Edge TTS",
  "version": "0.1.0",
  "description": "MS Edge TTS",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "MS Edge TTS"
  },
  "permissions": [
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}